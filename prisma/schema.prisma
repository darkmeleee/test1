// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
    output   = "../generated/prisma"
}

datasource db {
    provider = "postgres"
    url      = env("DATABASE_URL")
}

model User {
    id         String     @id @default(cuid())
    telegramId String     @unique
    username   String?
    firstName  String
    lastName   String?
    photoUrl   String?
    authDate   Int
    hash       String
    createdAt  DateTime   @default(now())
    updatedAt  DateTime   @updatedAt
    cartItems  CartItem[]
    orders     Order[]

    @@index([telegramId])
}

model Category {
    id        String   @id @default(cuid())
    name      String   @unique
    type      String // "MAIN" or "ATTRIBUTE"
    flowers   Flower[]
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([type])
}

model Flower {
    id              String      @id @default(cuid())
    name            String
    price           Float
    image           String
    categoryId      String
    attributesJson  String      @default("[]") // JSON string array of attribute IDs
    inStock         Boolean     @default(true)
    deliveryNextDay Boolean     @default(false)
    category        Category    @relation(fields: [categoryId], references: [id])
    cartItems       CartItem[]
    orderItems      OrderItem[]
    orders          Order[]
    createdAt       DateTime    @default(now())
    updatedAt       DateTime    @updatedAt

    @@index([categoryId])
}

model CartItem {
    id        String   @id @default(cuid())
    userId    String
    flowerId  String
    quantity  Int      @default(1)
    user      User     @relation(fields: [userId], references: [id])
    flower    Flower   @relation(fields: [flowerId], references: [id])
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@unique([userId, flowerId])
    @@index([userId])
    @@index([flowerId])
}

model Order {
    id              String      @id @default(cuid())
    userId          String
    totalAmount     Float
    status          String      @default("PENDING") // PENDING, CONFIRMED, DELIVERED, CANCELLED
    deliveryAddress String?
    phoneNumber     String?
    notes           String?
    createdAt       DateTime    @default(now())
    updatedAt       DateTime    @updatedAt
    user            User        @relation(fields: [userId], references: [id])
    items           OrderItem[]
    flower          Flower?     @relation(fields: [flowerId], references: [id])
    flowerId        String?

    @@index([userId])
    @@index([status])
}

model OrderItem {
    id        String   @id @default(cuid())
    orderId   String
    flowerId  String
    quantity  Int
    price     Float // Price at time of order
    order     Order    @relation(fields: [orderId], references: [id])
    flower    Flower   @relation(fields: [flowerId], references: [id])
    createdAt DateTime @default(now())

    @@index([orderId])
    @@index([flowerId])
}
